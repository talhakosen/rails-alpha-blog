<h1>create article</h1>
<% if @article.errors.any? %>
    <% @article.errors.full_messages.each do |msg| %>
        <ul>
          <li>
            <%= msg %>
          </li>
        </ul>
    <% end %>
<% end %>
<%= form_for @article do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back to article ', articles_path %>